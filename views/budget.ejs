<%- include('partials/header') -%>

<div class="container-fluid title mb-3" align="center">Hello <%= user.userName %></div>

<div class="container-fluid" align="center">
  <a href="/expense/add" class="btn btn-secondary mb-5">Add expense</a>
  <a href="income/add" class="btn btn-primary">Add income</a>
</div>

<div class="container-fluid" align="center">
  <div class="card w-96 bg-base-100 shadow-xl" align="left">
    <div class="card-body">
      <div class="card-title">Totals</div>
      <p>Daily:</p>

      <p>Weekly:</p>
      <p>Monthly:</p>
      <p>Annually:</p>
    </div>
  </div>
  </div>
</div>

<div class="card-body">
  <div class="overflow-x-auto">
    <table class="table table-zebra w-full">
      <!-- head -->
      <thead>
        <tr>
          <th></th>
          <th>Expense</th>
          <th>Cost</th>
          <th>How often?</th>
          <th>Daily</th>
          <th>Weekly</th>
          <th>Monthly</th>
          <th>Yearly</th>
        </tr>
      </thead>
      <tbody>
        <!-- Row -->
        <% for (let i=0; i < expenses.length; i++) { %>
          <tr>
            <th></th>
            <td>
              <a href="/expense/<%=expenses[i]._id%>"><%= expenses[i].expense %></a>
            </td>
            <td>$<%= expenses[i].cost.toFixed(2) %></td>
            
            <!-- Frequency loop -->
            <% if (expenses[i].frequency) { %>
              <% let num = expenses[i].frequency.num %>
              <% let unit = expenses[i].frequency.unit %>
            
            <!-- How often? -->
            <td>
                <% if (num > 1) { %>
                  Every <%= num %> <%= unit %>s
                 <% } else if (num === 1) { %>
                  Every <%= unit %>
                 <% } %>
            </td>

            <!-- Daily -->
            <td>
              <!-- Day -->
              <% if (unit === 'day') { %>
                $<%= (expenses[i].cost / num).toFixed(2) %>
                <!-- Week -->
               <% } else if (unit === 'week') { %>
                $<%= ((expenses[i].cost / num) / 7).toFixed(2) %>
                <!-- Month -->
               <% } else if (unit === 'month') { %>
                $<%= ((expenses[i].cost / num) / 30).toFixed(2) %>
                <!-- Year -->
               <% } else if (unit === 'year') { %>
                $<%= (expenses[i].cost / (365 / num)).toFixed(2) %>
               <% } %>
            </td>

            <!-- Weekly -->
            <td></td>

            <!-- Monthly -->
            <td></td>

            <!-- Yearly -->
            <td>
              <!-- Day -->
              <% if (unit === 'day') { %>
                $<%= (365 / num) * expenses[i].cost %>
                <!-- Week -->
               <% } else if (unit === 'day') { %>
                $<%= (52 / num) * expenses[i].cost %>
                <!-- Month -->
               <% } else if (unit === 'month') { %>
                $<%= (12 / num) * expenses[i].cost %>
                <!-- Year -->
               <% } else if (unit === 'year') { %>
                $<%= (num) * expenses[i].cost %>
               <% } %>
            </td>

            <% } %>
          </tr>
        <% } %>
  
      </tbody>
    </table>
  </div>
</div>
  
<%- include('partials/footer') -%>