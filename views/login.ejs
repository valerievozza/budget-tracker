<%- include('partials/header') -%>

<div class="container-fluid" align="center">
  <div class="card w-96 bg-accent shadow-xl">
    <div class="card-body">
      <h2 class="card-title">Welcome back!</h2>
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
        <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %> <% } %> <% if (locals.messages.info) { %> <%
        messages.info.forEach( el => { %>
        <div class="alert alert-info"><%= el.msg %></div>
        <% }) %> <% } %>

      <form action="/login" method="POST">
          <input type="email" class="form-control input input-bordered w-full max-w-xs mb-3" id="email" aria-describedby="emailHelp" name="email" placeholder="Email">
          <input type="password" class="form-control input input-bordered w-full max-w-xs mb-3" id="password" name="password" placeholder="Password">
          <div class="card-actions justify-end">
            <button type="submit" class="btn btn-accent">Login</button>
          </div>
      
      </form>

    </div>
  </div>
</div>


<%- include('partials/footer') -%>
