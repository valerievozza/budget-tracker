<%- include('../partials/header') -%>

<div class="container-fluid" align="center">
  <div class="card w-96 bg-base-100 shadow-xl" align="left">
    <div class="card-body">
      <h2 class="card-title">Edit Expense</h2>
      <form
        action="/expense/<%= expense.id %>?_method=PUT"
        method="POST"
      >
        <div class="form-control">
          <input type="text" placeholder="Expense" value="<%= expense.expense %>" class="input input-bordered input-primary w-full max-w-xs mb-3" name="expense" id="expense" required />
          <input type="number" placeholder="Cost" value="<%= expense.cost %>" class="input input-bordered input-primary w-full max-w-xs mb-3" name="cost" id="cost" required />
          
          <!-- Frequency -->
          <label class="label" for="frequency">How often?<br>Every...</label>
          <div class="grid grid-cols-2 gap-5">
            <input type="number" placeholder="Number" value="<%= expense.frequency.num %>" class="input input-bordered input-primary w-full max-w-xs mb-3 col" name="num" id="num" />
            <select class="select select-primary w-full max-w-xs mb-3 col" name="unit" id="unit" value="<%= expense.frequency.unit %>" >
              <option value="day">Day(s)</option>
              <option value="week">Week(s)</option>
              <option selected value="month">Month(s)</option>
              <option value="year">Year(s)</option>
            </select>
          </div>
          <label class="label" for="due" value="<%= expense.due %>">Due Date</label>
          <input type="date" class="input input-bordered input-primary w-full max-w-xs mb-3" name="due" id="due" />
          <select class="select select-primary w-full max-w-xs mb-3 col" name="unit" id="unit" value="<%= expense.category %>">
            <option>Category</option>
            <option value="home">Home</option>
            <option value="auto">Auto</option>
            <option value="education">Education</option>
            <option value="utilities">Utilities</option>
            <option value="pet">Pet</option>
          </select>
          <input type="text" placeholder="Source of funds" value="<%= expense.fundsSource %>" class="input input-bordered input-primary w-full max-w-xs mb-3" name="fundsSource" id="fundsSource" />
          <textarea class="textarea textarea-primary mb-3" placeholder="Notes" value="<%= expense.notes %>"></textarea>
        </div>
        <div class="card-actions justify-end">
          <button type="submit" class="btn btn-secondary">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>